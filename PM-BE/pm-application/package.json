{
  "name": "personal-management-project",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "cleanup": "rimraf build/resources/main/static/",
    "clean-www": "rimraf build/resources/main/static/app/{src,build/}",
    "start": "npm run webapp:dev",
    "webapp:build": "npm run clean-www && npm run webapp:build:dev",
    "webapp:build:dev": "npm run webpack -- --config webpack/webpack.dev.js --env stats=minimal",
    "webapp:build:prod": "npm run webpack -- --config webpack/webpack.prod.js --progress=profile",
    "webapp:dev": "npm run webpack-dev-server -- --config webpack/webpack.dev.js --inline --port=9060 --env stats=minimal",
    "webpack-dev-server": "npm run webpack -- serve",
    "webpack": "node --max_old_space_size=4096 node_modules/webpack/bin/webpack.js",
    "backend:info": "cd .. && gradlew -v",
    "backend:start": "cd .. && gradlew :pm-application:bootRun",
    "java:jar": "cd .. && gradlew :pm-application:bootJar -x test",
    "java:war": "cd .. && gradlew :pm-application:bootWar -Pwar -x test",
    "java:jar:dev": "npm run java:jar -- -Pdev,webapp",
    "java:jar:prod": "npm run java:jar -- -Pprod",
    "java:war:dev": "npm run java:war -- -Pdev,webapp",
    "java:war:prod": "npm run java:war -- -Pprod"
  },
  "author": "HT",
  "license": "ISC",
  "config": {
    "backend_port": "8080",
    "default_environment": "prod",
    "packaging": "jar"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.4.1",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "path-browserify": "^1.0.1",
    "postcss-loader": "^5.2.0",
    "rimraf": "^3.0.2",
    "simple-progress-webpack-plugin": "^1.1.2",
    "stripcomment-loader": "^0.1.0",
    "style-loader": "^2.0.0",
    "swagger-ui-dist": "^3.46.0",
    "webpack": "^5.32.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3",
    "webpack-notifier": "^1.13.0",
    "workbox-webpack-plugin": "^6.1.5"
  }
}
